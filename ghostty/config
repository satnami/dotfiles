# Font
font-family = "MesloLGS NF"
# font-family = "Hack Nerd Font Mono"
# font-family = "0xProto Nerd Font Mono"
font-size = 14
font-thicken = true

# Mouse & Scrolling
mouse-hide-while-typing = true
cursor-style = block
cursor-style-blink = false
shell-integration-features = no-cursor
scrollback-limit = 10000

# Automatic Update
auto-update = check

# Other
shell-integration = zsh
# macos-hidden = always
# macos-option-as-alt = true

# Style of Titlebar - MacOS specific
macos-titlebar-style = transparent

# Window Settings
window-padding-x = 10
window-padding-y = 10
window-padding-balance = true

# Custom Keybinds & Config (supor == command key on mac)
# global means overrides all other apps
# Userful Keybinds
keybind = super+i=inspector:toggle
keybind = global:shift+escape=toggle_quick_terminal
quick-terminal-position = bottom
# quick-terminal-size = 40%

# Tab navigation (iTerm-like: Command + Right / Command + Left)
keybind = super+right=next_tab
keybind = super+left=previous_tab

# Optional: reload config quickly (handy while tuning)
keybind = super+r=reload_config

